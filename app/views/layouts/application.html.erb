<!DOCTYPE html>
<html>
  <head>
    <title>Blocipedia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="nav-bar">
      <h1 class="hero-text"><%= link_to 'Wiki', root_path %></h1>
    <div class="login-opt">
      <% if user_signed_in? %>
        <strong><%= current_user.email %></strong>
        <br />
        <% if current_user.try(:premium?)%>
          <%= link_to 'Downgrade', charges_cancel_path, method: :post, :class => 'navbar-link',  data: {confirm: 'Are you sure? By downgrading all your private posts will become public.' } %>
        <% else %>
          <%= link_to 'Upgrade', new_charge_url, :class => 'navbar-link' %>
        <% end %> - <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'navbar-link' %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
        <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>
  </div>
  <%= flash_messages %>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>