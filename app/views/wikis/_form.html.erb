<%= form_for @wiki do |f| %>
    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter your title...' %>
    </div>
    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control text-area', placeholder: 'Enter your body...' %>
    </div>
    <% if current_user.try(:premium?)%>
    <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private, class: 'checkbox'%> Private Wiki?
        <% end %>
    </div>
    <% end %>
    <%= f.submit "Save", class: 'button' %>
<% end %>
