<div class="wiki-contain">
    <h1><%= @wiki.title %></h1>
    <p><%= @wiki.body %></p>
    <small><strong>Posted By:</strong> <%= @wiki.user.email %></small>

    
    <% if policy(Wiki).edit? %>
        <%= link_to 'Edit Wiki', edit_wiki_path(@wiki), class: 'button'  %>
        <%= link_to 'Delete Wiki', @wiki, method: :delete, class: 'button', data: {confirm: 'Are you sure you want to delete this wiki?' } %>
    <% end %>
</div>